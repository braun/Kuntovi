<script>
    showComments(false);
    function collapse(timeo)
    {
        if(timeo == null)
            timeo = 5000;
        var elem = document.querySelector('.title');
        if(dectime != null)
        {
            window.clearTimeout(dectime);
            dectime = null;
            elem.classList.add("collapsed");
            return;
        }
        window.setTimeout(function()
        {
            elem.classList.add("collapsed");
        },timeo);
    }
    collapse();

    var dectime = null;
    function decollapse()
    {
        var elem = document.querySelector('.title');
        if(dectime == null)
            dectime = window.setTimeout(function()
            {
                dectime = null;
                elem.classList.remove("collapsed");
            },1000);
    }
    function showform()
    {
        var form = document.getElementById("addCommentForm");
        form.style.display="flex";
        var nickName = document.getElementById("nickName");
        nickName.focus();
    }
</script>

