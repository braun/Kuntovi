    <script>
        function showComments(showc)
        {
            var btshowcom = document.getElementById("btshowcom");
            var btshowgal = document.getElementById("btshowgal");
            var sidegallery = document.getElementById("sidegallery");
            var sidecommentary = document.getElementById("sidecommentary");

            btshowcom.style.display = !showc ? "inline-block": "none";
            btshowgal.style.display = showc ? "inline-block": "none";
            sidegallery.style.display = !showc ? null: "none";
            sidecommentary.style.display = showc ? null: "none";
        }
    </script>
    <div class="wrapper"><div class="set1">
